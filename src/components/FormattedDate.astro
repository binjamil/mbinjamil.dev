---
export interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>

<style>
  time {
    font-family: var(--ff-headlines);
    color: var(--clr-text-accent);
  }
</style>
