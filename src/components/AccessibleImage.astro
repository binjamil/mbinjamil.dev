---
import { Image } from "astro:assets";

type Props = { name: string; alt: string; width?: number };

const { name, alt, width } = Astro.props;
---

<Image
  class="lightImage"
  src={import(`../assets/${name}-light.png`)}
  alt={alt}
  width={width}
/>
<Image
  class="darkImage"
  src={import(`../assets/${name}-dark.png`)}
  alt={alt}
  width={width}
/>

